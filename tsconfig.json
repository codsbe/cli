{
  "compilerOptions": {
    "lib": ["es2017", "dom"],
    "types": ["node"],
    "module": "commonjs",
    "target": "es6",
    "moduleResolution": "node",
    "declaration": true,
    "outDir": "./lib",
    "strict": true,
    "noImplicitReturns": true,
    "removeComments": false,
    "jsx": "react",
    "sourceMap": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "importHelpers": true,
    "stripInternal": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "**/__tests__/*", ".idea"]
}
